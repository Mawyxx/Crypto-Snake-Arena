# Скопируйте в .env и заполните значения
# cp .env.example .env

# PostgreSQL (по умолчанию: localhost)
DATABASE_URL=host=localhost user=postgres password=postgres dbname=crypto_snake port=5432 sslmode=disable

# Redis для presence (online-счётчик). По умолчанию: localhost:6379
REDIS_URL=localhost:6379

# Токен бота от @BotFather (обязательно для Telegram Mini App)
TELEGRAM_BOT_TOKEN=

# После деплоя настрой webhook для реферальных ссылок.
# Если задан WEBHOOK_SECRET_TOKEN, добавь &secret_token=<ТОКЕН> в setWebhook:
# curl "https://api.telegram.org/bot<TOKEN>/setWebhook?url=https://arrenasnake.net/api/bot/webhook&secret_token=<ТОКЕН>"
WEBHOOK_SECRET_TOKEN=

# Порт сервера (по умолчанию: 8080)
PORT=8080

# ADD_BALANCE_SECRET — токен для POST /api/internal/add-balance (GitHub Actions). Если пусто — отключён.
# ADD_BALANCE_SECRET=

# DEV_AUTO_CREDIT — для тестов: при клике на баланс/пополнить начисляется 500 USDT. Для релиза — не задавать.
# DEV_AUTO_CREDIT=true

# Логгер: debug | info | warn | error (по умолчанию: info). debug — для отладки, JSON в prod
LOG_LEVEL=info

# CORS: * или all = разрешить все origin (для dev/ngrok)
ALLOWED_ORIGINS=*
